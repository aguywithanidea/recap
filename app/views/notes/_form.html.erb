      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :member_id %><br>
    <%= f.select(:member_id, Member.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
  </div>
  <div class="field">
    <%= f.label :note_tag_id %><br>
    <%= f.select(:note_tag_id, Note::Tag.all.collect {|p| [ p.name, p.id ] }, { include_blank: true }) %>
  </div>
  <div class="field">
    <%= f.label :note %><br>
    <%= f.text_field :note %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
