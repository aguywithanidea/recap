= render '/members/partials/notice'

%h1 Notes

%table.table.table-striped
  %thead
    %tr
      %th Member
      %th Tag
      %th Note
      %th{colspan:3}

  %tbody
    - @notes.each do |note|
      %tr
        %td= note.member.name
        %td=  h note.tag.name
        %td= note.note
        %td= link_to( 'Show', note)
        %td= link_to( 'Edit', edit_note_path(note))
        -# %td= link_to 'Destroy', note, method: :delete, data: { confirm: 'Are you sure?' }


=link_to( 'New Note', new_note_path, {class:'btn btn-primary btn-lg', role:'button'})
