.col-md-4.col-md-offset-4

  %h2 
    Sign up for 
    %b recap

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = raw devise_error_messages!(emphasis:"Please fix the following:")
  
    .form-group.form-group-lg
      = f.label :email
      = f.email_field :email, autofocus: true, class:'form-control', placeholder: 'you@yourdomain.com'

    .form-group.form-group-lg
      = f.label :password, class:'control-label'
      .input-group
        = f.password_field :password, {class:'form-control', placeholder: 'Password', autocomplete: 'off'}
        - if @validatable 
          %span.input-group-addon.text-muted
            #{@minimum_password_length} chars min.

    .form-group.form-group-lg
      = f.label :password_confirmation
      = f.password_field :password_confirmation, {class:'form-control', autocomplete: 'off'}

    %button.btn.btn-primary.btn-lg.col-xs-12{type:'submit'} Sign up

.col-md-4.col-md-offset-4
  = render "devise/shared/links"
