= form_for(@member, html: {class:'form-inline'}) do |f|
  - if @member.errors.any? 
    = render '/partials/standard_form_errors', locals: {errors: @member.errors}

  .form-group
    = f.label :name, class:'sr-only'
    = f.text_field :name, class:'form-control', placeholder:'Member Name'

  .form-group
    = f.label :email, class:'sr-only'
    = f.text_field :email, class:'form-control', placeholder:'Email Address'

  %button.btn.btn-info{type:'submit'} Submit
